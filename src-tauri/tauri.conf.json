{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run start",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "package": {
    "productName": "HuffmanIDE_MVP",
    "version": "1.3.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "python",
            "cmd": "/usr/bin/python",
            "args": true
          },
          {
            "name": "python3",
            "cmd": "/usr/bin/python3",
            "args": true
          },
          {
            "name": "ollama",
            "cmd": "/usr/local/bin/ollama",
            "args": true
          },
          {
            "name": "which",
            "cmd": "which",
            "args": true
          },
          {
            "name": "sh",
            "cmd": "sh",
            "args": true
          },
          {
            "name": "rm",
            "cmd": "rm",
            "args": true
          },
          {
            "name": "git",
            "cmd": "git",
            "args": [
              {
                "validator": "\\S+"
              }
            ]
          }
        ]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["http://localhost:11434/*"]
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "exists": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "scope": {
          "allow": [
            "$APPDATA/**",
            "$APPCONFIG/**",
            "$APPLOCAL/**",
            "$DESKTOP/**",
            "$DOCUMENT/**",
            "$DOWNLOAD/**",
            "$HOME/**",
            "$PICTURE/**",
            "$PUBLIC/**",
            "$RUNTIME/**",
            "$TEMP/**",
            "**"
          ],
          "deny": ["$APPDATA/*/sensitive/**", "$SYSTEM/**"]
        }
      },
      "path": {
        "all": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.wenergie.huffmanide",
      "longDescription": "",
      "macOS": {
        "entitlements": "entitlements.plist",
        "providerShortName": "7DYCNUWT79",
        "signingIdentity": "Developer ID Application: Wenergie Io (7DYCNUWT79)",
        "frameworks": [],
        "exceptionDomain": ""
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "width": 800,
        "title": "HuffmanIDE"
      }
    ]
  }
}
